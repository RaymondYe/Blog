<%- include head %>
<% if(user && (user.name == post.name)){%>
<p>
  <span><a class="btn btn-primary" href="/edit/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">编辑</a></span>
  <span><a class="btn btn-danger" href="/remove/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">删除</a></span>
</p>
<% } %>
<p class="info">
  作者：<a href="/u/<%= post.name %>"><%= post.name %></a> |
  日期：<%= post.time.minute %>
</p>
<p><%- post.post %></p>
<p class="info">阅读：<%= post.pv %> | 评论：<%= post.comments.length %></p>
<%- include comment %>
<%- include foot %>